<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vmark.backend.mapper.AttachmentMapper">
    <!-- Inserts -->
    <insert id="add">
        INSERT INTO attachments(`name`, `path`, `timestamp`)
        VALUES (#{name}, #{path}, #{timestamp})
    </insert>

    <!-- Updates -->
    <update id="updateName">
        UPDATE attachments
        SET `name` = #{name}
        WHERE aid = #{aid}
    </update>

    <!-- Deletes -->
    <delete id="delete">
        DELETE FROM attachments
        WHERE aid = #{aid}
    </delete>

    <!-- Selects -->
    <select id="findById" resultType="Attachment">
        SELECT *
        FROM attachments
        WHERE aid = #{aid}
    </select>
    <select id="findAll" resultType="Attachment">
        SELECT *
        FROM attachments
        <if test="name != null">
        WHERE `name` LIKE CONCAT('%', #{name}, '%')
        </if>
        <if test="order_name != null">
        ORDER BY ${order_name} ${order_type}
        </if>
        <choose>
            <when test="page != null">
        LIMIT #{page}, 20
            </when>
            <otherwise>
        LIMIT 20
            </otherwise>
        </choose>
    </select>
</mapper>
